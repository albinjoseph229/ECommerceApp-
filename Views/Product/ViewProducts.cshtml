@model IEnumerable<ECommerceApp.Models.Product>

@{
    ViewData["Title"] = "View Products";
}

<h2>View Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="product-card">
                <h3>@product.Name</h3>
                <p>@product.Description</p>
                <p><strong>Price:</strong> @product.Price.ToString("C")</p>
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="ProductId" value="@product.Id" />
                    <input type="number" name="Quantity" placeholder="Quantity" required class="form-control" />
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
            </div>
        </div>
    }
</div>